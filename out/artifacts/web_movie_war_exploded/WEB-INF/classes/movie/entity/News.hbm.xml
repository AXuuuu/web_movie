<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="movie.entity.News" table="news" schema="web">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="time">
            <column name="time" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="text" not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>