<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="movie.entity.Movie" table="movie" schema="web">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="img">
            <column name="img" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="introduction">
            <column name="introduction" sql-type="text" not-null="true"/>
        </property>
        <property name="src">
            <column name="src" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>